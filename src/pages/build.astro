---
import Layout from "../layouts/Layout.astro";
import Builder from "../apps/SimpleArithmetic/builder.svelte";
import exercises from "../data/exercises.json";
---

<Layout title="Build Custom Exercise">
  <h2>Arithmetic</h2>
  <p>Select the exercises you'd like to practice:</p>
  <Builder
    client:load
    exercises={exercises.filter((e) => {
      return e.format === "simple-arithmetic";
    })}
  />
  <h2>Squares</h2>
  <p>Select the exercises you'd like to practice:</p>
  <Builder
    client:load
    exercises={exercises.filter((e) => {
      return e.format === "squares";
    })}
  />
  <h2>Percentages</h2>
  <p>Select the exercises you'd like to practice:</p>
  <Builder
    client:load
    exercises={exercises.filter((e) => {
      return e.format === "percentages";
    })}
  />
</Layout>
